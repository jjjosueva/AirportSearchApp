<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AirportSearchApp.ViewModels"
             x:Class="AirportSearchApp.Views.SearchPage"
             Title="SCordova - Buscador">

    <ContentPage.BindingContext>
        <vm:AirportViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10">
        <Entry x:Name="scordova_searchEntry" 
               Placeholder="Ingrese un paÃ­s..." 
               Text="{Binding SearchText}" />

        <HorizontalStackLayout Spacing="10">
            <Button x:Name="scordova_searchButton" 
                    Text="Buscar" 
                    Command="{Binding SearchCommand}" />
            <Button x:Name="scordova_clearButton" 
                    Text="Limpiar" 
                    Command="{Binding ClearCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
